{
  "name": "kinin-code-offical-profile",
  "version": "1.0.0",
  "private": true,
  "description": "Automation and assets for the Kinin-Code-Offical GitHub profile README",
  "scripts": {
    "build": "npm run generate:all",
    "generate:all": "npm run generate:metrics && npm run generate:cards && npm run generate:featured",
    "generate:metrics": "ts-node scripts/generate-metrics.ts",
    "generate:cards": "ts-node scripts/generate-cards.ts",
    "generate:featured": "ts-node scripts/generate-featured-projects.ts",
    "lint:md": "markdownlint-cli2 \"*.md\" \"docs/**/*.md\"",
    "format": "prettier --write \"**/*.{md,json,yml,yaml,ts}\"",
    "format:check": "prettier --check \"**/*.{md,json,yml,yaml,ts}\"",
    "validate:assets": "ts-node scripts/validate-assets.ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "ajv": "^8.12.0",
    "markdownlint-cli2": "^0.13.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
